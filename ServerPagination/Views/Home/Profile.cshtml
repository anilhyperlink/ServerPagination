@{
    ViewData["Title"] = "Profile Page";
}

<div class="wraper container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="card-box m-t-20">
                <h4 class="m-t-0 header-title"><b>Update Profile</b></h4>

                <div class="bg-picture text-center">
                    <div class="profile-info-name">
                        <img src="~/assets/images/users/avatar-1.jpg" class="thumb-lg img-circle img-thumbnail" alt="profile-image">
                        <h4 class="m-b-5"><b>Chadengle</b></h4>
                        <p class="text-muted"><i class="fa fa-map-marker"></i> New york, United States</p>
                    </div>
                </div>

                <form id="AddUserForm m-t-10 m-b-10">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">FirstName</label>
                                <input type="text" class="form-control" id="field-1" placeholder="John" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Lastname</label>
                                <input type="text" class="form-control" id="field-2" placeholder="Doe" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="reset" class="btn btn-default waves-effect">reset</button>
                            <button type="button" class="btn btn-info waves-effect waves-light">Update</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

        <div class="col-md-12">

            <div class="card-box m-t-20">
                <h4 class="m-t-0 header-title"><b>Change Password</b></h4>

                <form id="AddUserForm m-t-10 m-b-10">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Old Password</label>
                                <input type="password" class="form-control" id="field-1" placeholder="Enter Old Password" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-1" class="control-label">New Password</label>
                                <input type="password" class="form-control" id="field-1" placeholder="Enter New Password" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Confirm Password</label>
                                <input type="password" class="form-control" id="field-1" placeholder="Enter Confirm Password" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="reset" class="btn btn-default waves-effect">reset</button>
                            <button type="button" class="btn btn-info waves-effect waves-light">Update</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

        <div class="col-md-12">
            <div class="card-box m-t-20">
                <h4 class="m-t-0 header-title"><b>App Configuration</b></h4>

                <form id="AddUserForm m-t-10 m-b-10">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Commission</label>
                                <input type="text" class="form-control" id="field-1" placeholder="10" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Auto Booking Response Time</label>
                                <input type="text" class="form-control" id="field-2" placeholder="90" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Regular Booking Response Time</label>
                                <input type="text" class="form-control" id="field-1" placeholder="75" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Insurance Free</label>
                                <input type="text" class="form-control" id="field-2" placeholder="50" />
                                <span class="text-danger text-sm"></span>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button type="reset" class="btn btn-default waves-effect">reset</button>
                            <button type="button" class="btn btn-info waves-effect waves-light">Update</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div> <!-- container -->